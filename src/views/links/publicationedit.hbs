<div class="container p-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/editEdicion/{{link.idPublica}}" method="POST">
              <div class="form-group">
                <h3 class="text-center">Editar una Edicion</h3>
              </div>
              <div class="form-group">
                <label for="anyo">Año</label>
                <input type="text" value="{{link.anyo}}" class="form-control" name="anyo" min="1900" placeholder="Año" autofocus required>
              </div>
              <div class="form-group">
                <label for="volumen">Volumen</label>
                <input type="number" value="{{link.volumen}}" class="form-control" name="volumen" min="1" placeholder="Volumen" required>
              </div>
              <div class="form-group">
                <label for="numero">Numero</label>
                <input type="number" value="{{link.numero}}" class="form-control" name="numero" min="1" placeholder="Número Revista" required>
              </div>
              <div class="form-group">
                <button class="btn btn-success btn-block">
                  Guardar
                </button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>