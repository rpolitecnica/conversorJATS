<div class="container p-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/publication/{{id}}" method="POST">
              <div class="form-group">
                <h3 class="text-center">Registro Nueva Edicion</h3>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="anyo" min="1900" placeholder="Año" autofocus required>
              </div>
              <div class="form-group">
                <input type="number" class="form-control" name="volumen" min="1" placeholder="Volumen" required>
              </div>
              <div class="form-group">
                <input type="number" class="form-control" name="numero" min="1" placeholder="Número Revista" required>
              </div>
              <div class="form-group">
                <button class="btn btn-success btn-block">
                  Save
                </button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>