<div class="container p-4">
  <div class="text-dark text-center p-4">
    <h3>EDICIONES</h3>
  </div>
  <div class="card text-center">
    <div class="card-body">
      <a href="/links/add/{{id}}" class="btn btn-success">Nuevo artículo</a>
    </div>
  </div>
  <div class="row">
    {{#each links}}
      <div class="col-sm-4 col-md-6 col-lg-4">
        <div class="card text-center h-100">
          <div class="card-body">
            <h5>
              <a href="/links/publicacion/{{idPublica}}">Año {{anyo}} - Volumen {{volumen}} - Numero {{numero}}</a>
            </h5>
            <p>Total Artículos {{total}}</p>
            <a href="/links/editEdicion/{{idPublica}}" class="btn btn-secondary">Editar</a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>No hay ediciones creadas</p>
          <a href="/profile">Mi Perfil</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>